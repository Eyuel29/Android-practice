<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <GridLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="5dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roleOptionO"
        app:layout_constraintVertical_bias="0.133">

        <Button
            android:id="@+id/choiceButton0"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice0Clicked"
            />

        <Button
            android:id="@+id/choiceButton1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice1Clicked"
            />

        <Button
            android:id="@+id/choiceButton2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice2Clicked"
            />

        <Button
            android:id="@+id/choiceButton3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice3Clicked"
            />

        <Button
            android:id="@+id/choiceButton4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice4Clicked"
            />

        <Button
            android:id="@+id/choiceButton5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice5Clicked"
            />

        <Button
            android:id="@+id/choiceButton6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice6Clicked"
            />

        <Button
            android:id="@+id/choiceButton7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice7Clicked"
            />

        <Button
            android:id="@+id/choiceButton8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:onClick="choice8Clicked"
            />


    </GridLayout>

    <Button
        android:id="@+id/roleOptionX"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="x"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:onClick="playerXSelected"
        />

    <Button
        android:id="@+id/roleOptionO"
        android:layout_width="58dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="o"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/roleOptionX"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:onClick="playerOSelected"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="112dp"
        android:layout_height="34dp"
        android:layout_marginTop="48dp"
        android:text="Choose your role"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toEndOf="@+id/winnerView"
        app:layout_constraintTop_toBottomOf="@+id/buttonContainer"
        android:onClick="resetButtonClicked"
        />

    <TextView
        android:id="@+id/winnerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Winner is"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>