<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classicServiceStartBtn"
            android:text="Classic service start"
            android:onClick="csStart"
            android:paddingVertical="20dp"
            android:layout_margin="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jobIntentServiceStartBtn"
            android:text="Job intent service start"
            android:onClick="jisStart"
            android:paddingVertical="20dp"
            android:layout_margin="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classicServiceStopBtn"
            android:text="Classic service stop"
            android:paddingVertical="20dp"
            android:onClick="csStop"
            android:layout_margin="30dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jobIntentServiceStopBtn"
            android:text="Job intent service stop"
            android:onClick="jisStop"
            android:paddingVertical="20dp"
            android:layout_margin="30dp"/>

    </LinearLayout>


</RelativeLayout>